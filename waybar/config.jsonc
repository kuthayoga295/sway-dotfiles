    "modules-left": [
        "sway/workspaces",
        "sway/mode",
        "sway/scratchpad",
        "custom/recorder",
        "sway/window"
    ],
    "modules-center": [],
    "modules-right": [
        "custom/launcher",
        //"mpd",
        "idle_inhibitor",
        "pulseaudio",
        "network",
        "power-profiles-daemon",
        "cpu",
        "memory",
        "temperature",
        "backlight",
        "keyboard-state",
        //"sway/language",
        "battery",
        //"battery#bat2",
        "clock",
        "custom/power",
        "tray"
