    },
    "tray": {
        "icon-size": 16,
        "spacing": 4
    },
    "clock": {
        "timezone": "Asia/Makassar",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}"
    },
    "cpu": {
        "format": "{usage}% Ôãõ",
        "tooltip": false
    },
    "memory": {
        "format": "{}% ÔàÄ"
    },
